<article class="modal-movie-wrapper" id="{{id}}">
    <button class="close-button" type="button">
        <svg class="icon-close" width="24px" height="24px" fill="#000000" viewbox="0 0 32 32"
            xmlns="http://www.w3.org/2000/svg">
            <path stroke="black" stroke-width="2.5" d="M8.533 8.533l14.933 14.933m-14.933.001L23.466 8.534" />
        </svg>
    </button>
    {{!-- {{#if poster_path}} --}}
    {{!-- w1280 --}}
    <img src="https://image.tmdb.org/t/p/w500{{poster_path}}" class="modal-movie-poster" loading="lazy"
        onerror="this.onerror=null;this.src='https://i.pinimg.com/564x/12/61/84/126184dfb0f0c766bfd35206dae35b37.jpg';" />
    {{!-- {{else}} --}}
    {{!-- <img src="https://i.pinimg.com/564x/12/61/84/126184dfb0f0c766bfd35206dae35b37.jpg" class="modal-movie-poster"
        loading="lazy" /> --}}
    {{!-- {{/if}} --}}
    <div class="modal-movie-information">
        <h2 class="modal-movie-title">{{title}}</h2>
        <ul class="modal-movie-data">
            <li class="modal-movie-item">
                <p class="modal-movie-data-name">Vote / Votes</p>
                <p class="modal-movie-description">
                    <span class="modal-movie-description-vote">{{vote_average}}</span>
                    <span class="modal-movie-data-slash">/</span>
                    <span class="modal-movie-description-votes">{{vote_count}}</span>
                </p>
            </li>
            <li class="modal-movie-item">
                <p class="modal-movie-data-name">Popularity</p>
                <p class="modal-movie-description">{{popularity}}</p>
            </li>
            <li class="modal-movie-item">
                <p class="modal-movie-data-name">Original Title</p>
                <p class="modal-movie-description-title">{{original_title}}</p>
            </li>
            <li class="modal-movie-item">
                <p class="modal-movie-data-name">Genre</p>
                <p class="modal-movie-description">
                    {{#each genres}}
                    <span class="modal-movie-genre-name">{{name}} </span>
                    {{/each}}
                </p>
            </li>
        </ul>
        <p class="modal-movie-about">About</p>
        <p class="modal-movie-descript">{{overview}}</p>
        <div class="buttons-wrapper movie-button">
            <input type="checkbox" class="visuallyhidden watched-checkbox">
            <span class="button add-watched-button" data-movieId="{{id}}">add to watched</span>
            <input type="checkbox" class="visuallyhidden queue-checkbox ">
            <span class="button add-queue-button" data-movieId="{{id}}">add to queue</span>
        </div>

    </div>
</article>